@using Core.Models;
@model DemoApp.Models.Cart
@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>My Shopping Cart</h1>
<hr/>
<img src="/images/flowers.jpg" width="200" height="100"/>

<table class="table">
     <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.theProduct.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td><p>@(item.theProduct.SalePrice * item.Quantity) </p> </td>
                <td><a href="/ShoppingCart/remove/@item.theProduct.ID">Remove</a></td>
            </tr>
        }
    </tbody>
</table>