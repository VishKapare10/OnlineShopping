@model IEnumerable<User>

@{
    ViewData["Title"] = "Home Page";
}

<h2> Users from other REST API</h2>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.FirstName</td>
                <td>@r.LastName</td>
                <td>@r.Role</td>
              
            </tr>
        }
    </tbody>
</table>